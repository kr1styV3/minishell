{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Debug with GDB",
        "type": "cppdbg",                           // Use the C/C++ debugger type
        "request": "launch",
        "program": "${workspaceFolder}/minishell", // Path to your executable
        "args": [],                                // Command-line arguments (if any)
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",              // Working directory
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",                           // Specify GDB as the debugger
        "setupCommands": [
            {
                "description": "Enable pretty-printing for GDB",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ]
    }
]


}
