{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch WSL",
        "type": "vgdb",
        "request": "launch",
        "program": "${workspaceFolder}/minishell",  // Path to your executable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "/usr/bin/gdb",  // Ensure GDB is installed in WSL
        "pipeTransport": {
          "pipeCwd": "",
          "pipeProgram": "wsl",
          "pipeArgs": [],
          "debuggerPath": "/usr/bin/gdb"
        }
      }
    ]
  }
